<% video_id = test ? ServerSetting.find('TEST_wc2025_video_url').value : ServerSetting.find('wc2025_video_url').value %>

<div class="wc2025">
  <h2 class="wc2025-header text-center">
    <%= "JULY 3-6: RUBIK'S WCA WORLD CHAMPIONSHIP 2025" %>
  </h2>

  <div class="panel row">
    <!-- Column 1: Logo + Buttons -->
    <div id="comp-logo" class="col-md-2 text-center">
      <%= image_tag "wc2025-logo", alt: "WC2025 Logo", class: "wc2025-logo", style: "margin-bottom: 20px;" %>

      <div class="wc2025-buttons">
        <a
          href="https://live.worldcubeassociation.org/competitions/7025"
          class="btn btn-primary btn-block"
          target="_blank"
          rel="noopener noreferrer"
        >Live Results</a>
        <a
          href="https://www.worldcubeassociation.org/competitions/WC2025#competition-schedule"
          class="btn btn-primary btn-block"
          target="_blank"
          rel="noopener noreferrer"
        >Schedule</a>
        <a
          href="https://www.competitiongroups.com/competitions/WC2025"
          class="btn btn-primary btn-block"
          target="_blank"
          rel="noopener noreferrer"
        >Competition Groups</a>
      </div>
    </div>

    <!-- Column 2: Livestream -->
    <div id="embed-and-buttons" class="col-md-8 text-center">
      <div class="embed-responsive embed-responsive-16by9" style="border-radius: 12px; overflow: hidden;">
        <iframe
          class="embed-responsive-item"
          src="<%= "https://www.youtube.com/embed/#{video_id}?autoplay=1&mute=1" %>"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
      </div>
    </div>

    <!-- Column 3: Sponsor -->
    <div id="sponsor-logos" class="col-md-2 text-center">
      <h3>Thank you to our title sponsor:</h3>
      <%= image_tag "rubiks_new.png",
        alt: "WC2025 Logo",
        class: "sponsor-logo"
      %>
    </div>
  </div>
</div>
