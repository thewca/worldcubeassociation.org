<div class="container">
  <%= render layout: "devise/conversion_message", locals: { user: resource } do %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4><%= t('devise.passwords.new.forgot_your_password') %></h4>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
          <%= f.input :login, autofocus: true %>

          <%= f.submit t('devise.passwords.new.send_me_reset_password_instructions'), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
