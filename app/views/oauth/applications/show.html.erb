<%= render layout: "nav" do %>

  <div class="page-header">
    <h1>Application: <%= @application.name %></h1>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h4><%= t('oauth.applications.application_id') %>:</h4>
      <p><code id="application_id"><%= @application.uid %></code></p>

      <h4><%= t('oauth.applications.secret') %>:</h4>
      <p><code id="secret"><%= @application.secret %></code></p>

      <h4><%= t('oauth.applications.scopes') %>:</h4>
      <p><code id="scopes"><%= @application.scopes %></code></p>

      <h4><%= t('oauth.applications.callback_urls') %>:</h4>

      <table>
        <% @application.redirect_uri.split.each do |uri| %>
          <tr>
            <td>
              <code><%= uri %></code>
            </td>
            <td>
              <%= link_to t('doorkeeper.applications.buttons.authorize'), oauth_authorization_path(client_id: @application.uid, redirect_uri: uri, scope: @application.scopes, response_type: 'code'), class: 'btn btn-success', target: '_blank' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-4">
      <h3><%= t('oauth.applications.actions') %></h3>

      <p><%= link_to t('doorkeeper.applications.buttons.edit'), edit_oauth_application_path(@application), class: 'btn btn-primary' %></p>

      <p><%= render 'delete_form', application: @application, submit_btn_css: 'btn btn-danger' %></p>
    </div>
  </div>

<% end %>
