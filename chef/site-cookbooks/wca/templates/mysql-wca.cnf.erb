[mysqld]
skip-networking

# AuxiliaryDataComputation needs more than the default 1M
max_allowed_packet = 16M

# enable slow query log
slow_query_log = ON
long_query_time = 10
slow_query_log_file = '/var/log/mysql/slow.log'
log_slow_admin_statements = ON

# See https://github.com/thewca/worldcubeassociation.org/issues/2234
innodb_ft_min_token_size=2
ft_min_word_len=2

default-authentication-plugin=mysql_native_password
