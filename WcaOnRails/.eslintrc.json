{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "_": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jquery",
        "prettier"
    ],
    "rules": {
        "react/prop-types": "off",
        "react/jsx-filename-extension": "off",
        "import/no-unresolved": ["error", {
            "ignore": ["semantic-css/"]
        }],
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "prettier/prettier": ["error"]
    }
}
