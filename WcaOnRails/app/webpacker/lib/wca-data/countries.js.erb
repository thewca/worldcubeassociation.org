import _ from 'lodash';
import I18n from '../i18n'

export default {
  byIso2: _.mapValues(<%= Country.all.index_by(&:iso2).to_json.html_safe %>, extend),
  real: _.map(<%= Country.real.to_json.html_safe %>, extend),
};

function extend(country) {
  return {
    ...country,
    name: I18n.t(`countries.${country.iso2}`),
  };
}
