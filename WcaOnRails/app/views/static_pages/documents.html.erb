<% provide(:title, t('documents.title')) %>

<div class="container">
  <h1><%= yield(:title) %></h1>

  <div id="accordion" class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading heading-as-link">
        <h4 class="panel-title">
          <%= link_to "/documents/WCA Bylaws.pdf", class: "full-space" do %>
            <%= ui_icon("file alt") %> <%= t('documents.bylaws') %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading heading-as-link">
        <h4 class="panel-title">
          <%= link_to "/documents/Code of Conduct.pdf", class: "full-space" do %>
            <%= ui_icon("file alt") %> <%= t('documents.codeofconduct') %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading heading-as-link">
        <h4 class="panel-title">
          <%= link_to "/documents/Code of Ethics.pdf", class: "full-space" do %>
            <%= ui_icon("file alt") %> <%= t('documents.codeofethics') %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading heading-as-link">
        <h4 class="panel-title">
          <%= link_to "/files/WCA_IRS_Determination_Letter.pdf", class: "full-space" do %>
            <%= ui_icon("file alt") %> <%= t('documents.determination_letter') %>
          <% end %>
        </h4>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading heading-as-link">
        <h4 class="panel-title">
          <%= link_to "#motions", data: { toggle: "collapse", parent: "#accordion" } do %>
            <%= ui_icon("list ul") %> <%= t('documents.motions') %>
          <% end %>
        </h4>
      </div>
      <div id="motions" class="panel-collapse collapse">
        <div class="panel-body">
          <ul>
            <%= documents_list("motions") %>
          </ul>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading  heading-as-link">
        <h4 class="panel-title">
          <%= link_to "#minutes", data: { toggle: "collapse", parent: "#accordion" } do %>
            <%= ui_icon("list ul") %> <%= t('documents.minutes') %>
          <% end %>
        </h4>
      </div>
      <div id="minutes" class="panel-collapse collapse">
        <div class="panel-body">
          <ul>
            <li><%= link_to "WCA Minutes Log", "https://docs.google.com/spreadsheets/d/1SeojQM8xYhQFmZcyM13T67mQU1TBdgvghpuMhrFxGPo/edit?usp=sharing" %></li>
            <%= documents_list("minutes") %>
          </ul>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading  heading-as-link">
        <h4 class="panel-title">
          <%= link_to "#policies", data: { toggle: "collapse", parent: "#accordion" } do %>
            <%= ui_icon("list ul") %> <%= t('documents.policies') %>
          <% end %>
        </h4>
      </div>
      <div id="policies" class="panel-collapse collapse">
        <div class="panel-body">
          <ul>
            <%= documents_list("policies/external") %>
          </ul>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading  heading-as-link">
        <h4 class="panel-title">
          <%= link_to "#finances", data: { toggle: "collapse", parent: "#accordion" } do %>
            <%= ui_icon("list ul") %> <%= t("documents.finances") %>
          <% end %>
        </h4>
      </div>
      <div id="finances" class="panel-collapse collapse">
        <div class="panel-body">
          <ul>
            <%= documents_list("finances") %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
