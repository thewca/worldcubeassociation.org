<% provide(:title, t('about.title')) %>

<div class="container">

  <div class="jumbotron">
    <p class="lead"><%= t('about.donation_banner.content') %></p>
    <hr class="my-4">

    <a class="btn btn-primary btn-lg" href="https://www.nfggive.com/guidestar/82-3825954" role="button"><%= t('about.donation_banner.donate_credit') %></a>
    <a class="btn btn-primary btn-lg" href="#contribute" role="button"><%= t('about.donation_banner.donate_other') %></a>
  </div>

  <blockquote class="blockquote">
    <p class="mb-0"><%= t('about.mission') %></p>
    <footer class="blockquote-footer"><%= t('about.mission_footer') %></footer>
  </blockquote>

  <h2><%= t('about.who_we_are_title') %></h2>
  <div class="row">
    <div class="col-md-8">
    <%= t('about.who_we_are_content_html') %>
    </div>
    <div class="col-md-4">
      <img class="about-page-image" src=<%= asset_url("about/bulgarian-open.jpg") %> />
    </div>
  </div>

  <blockquote class="blockquote">
    <p class="mb-0"><%= t('about.spirit') %></p>
    <footer class="blockquote-footer"><%= t('about.spirit_footer') %></footer>
  </blockquote>


  <h2><%= t('about.our_goals_title') %></h2>

  <%= t('about.our_goals_content_html') %>

  <h2><%= t('about.whats_next_title') %></h2>
  <%= t('about.whats_next_content_html') %>

  <h2><%= t('about.world_championship_title') %></h2>
  <div class="row">
    <div class="col-md-8">
    <%= t('about.world_championship_content_html') %>
      </div>
    <div class="col-md-4">
      <img class="about-page-image" src=<%= asset_url("about/worlds-2015.jpg") %> />
    </div>
  </div>

  <h2><%= t('about.structure.title') %></h2>

  <p><%= t('about.structure.board.description') %></p>

  <ul>
    <% Team.board.current_members.includes(:user).map(&:user).sort_by(&:name).each do |board_member| %>
      <li><%= board_member.name %> - <%= board_member.country.name %></li>
    <% end %>
  </ul>

  <p>
    The day to day operations are run by the WCA's <%= link_to 'Teams and Committees', 'teams-committees' %>.
  </p>

  <p>
    <%= t 'about.structure.delegates_html', see_link: t('about.structure.see_link_html', link: link_to(t('delegates_page.title'), delegates_path)) %>
  </p>

  <p>
    <%= t('about.structure.members_html') %>
  </p>

  <h2 id="contribute"><%= t('about.contributing_title') %></h2>
  <p>
  <%= t('about.contributing_content_html') %>
    <em>
      <br />
      <br />
      World Cube Association
      <br />
      5042 Wilshire Blvd #43206
      <br />
      Los Angeles, CA 90036
      <br /><br />
    </em>
    <%= t('about.tax_deductible_note') %>
  </p>

  <h2><%= t('about.other_help_title') %></h2>
  <%= t('about.other_help_content_html') %>

</div>