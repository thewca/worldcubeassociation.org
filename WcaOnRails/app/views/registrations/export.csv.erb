<% require 'csv' %>
<% headers = ["Status", "Name", "Country", "WCA ID", "Birth Date", "Gender" ] + @competition.events.map(&:id) + [ "Email", "Guests", "IP" ] %>
<%= CSV.generate_line(headers).html_safe -%>
<% @registrations.each do |registration| %>
<%= CSV.generate_line([
  registration.wcif_status
  registration.name,
  registration.country.id,
  registration.wca_id,
  registration.birthday,
  registration.gender,
] + @competition.events.map { |e| registration.events.include?(e) ? "1" : "0" } + [
  registration.email,
  registration.guests,
  registration.ip,
]).html_safe -%>
<% end %>
