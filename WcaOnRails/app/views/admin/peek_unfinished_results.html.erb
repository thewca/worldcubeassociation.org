<% provide(:title, "Peek results") %>

<div class="container">
  <p>
    This page shows results where...
  </p>
  <ul>
    <li>personName = <b><%= @person_name %></b></li>
    <li>countryId = <b><%= @country_id %></b></li>
    <li>personId = <b><%= @person_id %></b></li>
  </ul>

  <hr/>

  <% @results_by_competition.each do |competition, results| %>
    <h3><%= link_to competition.id, competition_path(competition), target: '_blank' %></h3>

    <% muted_results = mute_results(results) %>
    <% @competition = competition %>

    <%= render "competitions/results_table", results: muted_results, hide_name: true, hide_country: true %>
  <% end %>
</div>
